<div>
  <div>
    <h1>
      List of users
    </h1>
  </div>
</div>

<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Username
        </th>

        <th>
          Private?
        </th>

        <th>

        </th>

        <th>

        </th>

      </tr>

      <% @list_of_users.each do |a_user| %>
        <tr>
          <td>
            <%= a_user.username %>
          </td>
          <% if a_user.private == false %>
            <td>
              No
            </td>
          <% else %>
            <td>
              Yes
            </td>
          <% end %>

          <% if @current_user != nil %>
           <% request = a_user.receivedfollowrequests.where(:sender_id => @current_user.id ).first %>
            <td>

              <% if request == nil %>
                <form action="/insert_follow_request" method="post">
                  <input type="hidden" name="query_recipient_id" value="<%= a_user.id %>">
                  <button>
                    Follow
                  </button>
                </form>

              <% elsif request.status == "pending" %>
                Request sent.
                <a href="/delete_follow_request/<%= %>">
                  Cancel
                </a>
              <% else %>

                <a href="/delete_follow_request/<%= %>">
                  Unfollow
                </a>

              <% end %>
            <% else %>
              <td>
              </td>

            <% end %>
          </td>
          <td>
            <a href="/users/<%= a_user.username %>">
              Show details
            </a>

          </td>
        </tr>

      <% end %>
    </table>
  </div>
</div>
