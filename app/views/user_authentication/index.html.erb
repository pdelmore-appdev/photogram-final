<div>
  <div>
    <h1>
      List of all users
    </h1>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Username
        </th>

        <th>
          Private
        </th>

        <th>
          Follow
        </th>

        <th>

        </th>

      </tr>

      <% @list_of_users.each do |a_user| %>
        <tr>
          <td>
            <%= a_user.username %>
          </td>
          <% if a_user.private == true %>
            <td>
              Yes
            </td>
          <% else %>
            <td>
              No
            </td>
          <% end %>
          <td>
            follow
          </td>

          <td>
            <a href="/users/<%= a_user.username %>">
              Show details
            </a>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
